<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwagApp.OrderedItemsPage" Title="{Binding Name}">

    <StackLayout Margin="20"
    
        <Label Text="Name" />
        <Entry Text="{Binding Name}" />
        <Label Text="Gender" />
        <Entry Text="{Binding Gender}" />
        <Label Text="TShirtSize" />
        <Entry Text="{Binding TShirtSize}" />
        <Label Text="DateOfOrder" />
        <Entry Text="{Binding DateOfOrder}" />
        <Label Text="TShirtColor" />
        <Entry Text="{Binding TShirtColor}" />
        <Label Text="ShippingAddress" />
        <Entry Text="{Binding ShippingAddress}" />
        <Button x:Name="Save" Text="Save" Clicked="Save_Clicked" />.
        <Button x:Name="Delete" Text="Delete" Clicked="Delete_Clicked" />
        <Button x:Name="Cancel" Text="Cancel" Clicked="Cancel_Clicked" />


    </StackLayout>
</ContentPage>